datasource db {
  provider = "mysql"
  url      = "mysql://root:123456789@localhost:3010/web"
}

generator client {
  provider = "prisma-client-js"
}

model EPN_USUARIO{
id              Int         @id @default(autoincrement())
fechaCreacion   DateTime    @default(now())
apellido        String
nombre          String?
mascota         Mascota[]
}

model Mascota{
id              Int             @id @default(autoincrement())
nombre          String
usuario         EPN_USUARIO     @relation(fields: [usuarioId], references: [id])
usuarioId       Int

}